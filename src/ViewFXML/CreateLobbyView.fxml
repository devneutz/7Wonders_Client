<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="720.0" prefWidth="1080.0" style="-fx-background-color: #615658;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ControllerFXML.CreateLobbyController">
   <children>
      <VBox layoutX="309.0" layoutY="290.0" spacing="10.0">
         <children>
            <HBox spacing="15.0">
               <children>
                  <TextField fx:id="NumberOfPlayerTextField" layoutX="14.0" layoutY="31.0" prefHeight="42.0" prefWidth="285.0" style="-fx-background-color: #c7aa72; -fx-background-radius: 0;" text="Number of Players">
                     <font>
                        <Font name="Arial Bold" size="22.0" />
                     </font>
                  </TextField>
                  <Button fx:id="LessPlayerButton" mnemonicParsing="false" onAction="#handleLessPlayerButton" prefHeight="42.0" prefWidth="42.0" style="-fx-background-color: #c7aa72; -fx-background-radius: 0;" text="&lt;">
                     <font>
                        <Font name="Arial Bold" size="22.0" />
                     </font>
                  </Button>
                  <TextField fx:id="CountOfPlayersTextField" layoutX="357.0" layoutY="31.0" prefHeight="42.0" prefWidth="42.0" style="-fx-background-color: #c7aa72; -fx-background-radius: 0;" text="4">
                     <font>
                        <Font name="Arial Bold" size="22.0" />
                     </font>
                  </TextField>
                  <Button fx:id="MorePlayerButton" mnemonicParsing="false" onAction="#handleMorePlayerButton" prefHeight="42.0" prefWidth="42.0" style="-fx-background-color: #c7aa72; -fx-background-radius: 0;" text="&gt;">
                     <font>
                        <Font name="Arial Bold" size="22.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <TextField fx:id="EnterLobbynameTextField" prefHeight="39.0" prefWidth="167.0" promptText="enter lobbyname" style="-fx-background-color: c7aa72; -fx-background-radius: 0;" />
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="CreateLobbyOkButton" mnemonicParsing="false" onAction="#handleCreateLobbyOkButton" prefHeight="39.0" prefWidth="226.0" style="-fx-background-color: c7aa72; -fx-background-radius: 0;" text="ok" textFill="WHITE" />
                  <Button fx:id="CreateLobbyCancelButton" mnemonicParsing="false" onAction="#handleCreateLobbyCancelButton" prefHeight="39.0" prefWidth="222.0" style="-fx-background-color: c7aa72; -fx-background-radius: 0;" text="cancel" textFill="WHITE" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
